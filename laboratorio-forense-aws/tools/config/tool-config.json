{
  "tools": {
    "volatility": {
      "version": "3.0",
      "installation_path": "/opt/volatility3",
      "dependencies": [
        "python3",
        "python3-pip",
        "git"
      ],
      "config": {
        "default_profile": "Win10x64",
        "output_format": "json"
      }
    },
    "lime": {
      "version": "1.0",
      "installation_path": "/opt/lime",
      "dependencies": [
        "python3",
        "python3-pip"
      ],
      "config": {
        "default_memory_location": "/dev/mem",
        "output_directory": "/mnt/evidence/memory_images"
      }
    }
  },
  "general": {
    "evidence_mount_point": "/mnt/evidence",
    "image_storage_path": "/mnt/images",
    "report_storage_path": "/mnt/reports"
  }
}